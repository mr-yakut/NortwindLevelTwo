@model IEnumerable<Mvc_Student_Register.Models.Table>

@{
    ViewBag.Title = "Index";
}

<h2>Student List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StdName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StdSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StdMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StdAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StdName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StdSurname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StdMail)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.StdAddress)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StdId }) |
            @Html.ActionLink("Details", "Details", new { id=item.StdId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StdId })
        </td>
    </tr>
}

</table>
